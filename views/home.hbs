<!doctype html>
<html lang="en" xmlns:v-bind="http://www.w3.org/1999/xhtml" xmlns:v-on="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/home.css">
    <title>Home</title>
</head>
<body>
<header class="site-header">
    <p class="header-text">Image manager</p>
    <div class="user-info">
        <a href="/profile" class="user-text">{{userFullName}}</a>
        <a href="/profile" class="user-avatar-link">
            <img class="user-avatar-img-min" src="/user-avatar/{{userAvatarFileName}}" alt="User photo">
        </a>
    </div>
</header>
<main class="content-wrapper" id="gallery">
    <section class="categories-wrapper">
        <button class="category" v-for="item of categoriesList" v-html="item.categoryName" v-on:click="activateCategory"></button>
    </section>
    <section class="gallery-wrapper">
        <button class="control-btn previous-btn" v-on:click="previousImages"
                v-bind:class="{ disabled: previousBtnDisabled }"></button>
        <div class="gallery">
            <div class="image-block" v-for="item of imagesList">
                <img v-bind:src="'/images/' + galleryData._id + '/' + item.fileName" alt="">
            </div>
        </div>
        <button class="control-btn next-btn" v-on:click="nextImages"
                v-bind:class="{ disabled: nextBtnDisabled }"></button>
    </section>
</main>
{{>footer}}
<script src="/js/vue.js"></script>
<script src="/js/home.js"></script>
</body>
</html>